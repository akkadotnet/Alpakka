<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyTitle>Akka.Streams.Azure.ServiceBus</AssemblyTitle>
        <Description>Azure ServiceBus adapter for Akka.NET Streams</Description>
        <TargetFrameworks>$(NetStandardLibVersion);$(NetLibVersion)</TargetFrameworks>
        <PackageTags>$(AkkaPackageTags);azure;ServiceBus</PackageTags>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Akka.Streams" Version="$(AkkaVersion)" />
        <PackageReference Include="Azure.Messaging.ServiceBus" Version="7.15.0" />
    </ItemGroup>

</Project>
