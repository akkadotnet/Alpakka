<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\common.props" />

    <PropertyGroup>
        <AssemblyTitle>Akka.Streams.SignalR</AssemblyTitle>
        <Description>SignalR connector for Akka.NET Streams</Description>
        <TargetFramework>$(NetFrameworkLibVersion)</TargetFramework>
        <PackageTags>$(AkkaPackageTags);signalr</PackageTags>
        <Platforms>AnyCPU;x64</Platforms>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Akka.Streams" Version="$(AkkaVersion)" />
        <PackageReference Include="Microsoft.AspNet.SignalR.Core" Version="2.4.0" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="reference.conf" />
    </ItemGroup>

</Project>
